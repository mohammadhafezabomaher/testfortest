{% extends 'base.html.twig' %}

{% block title %}New User
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5">Register</h1>
		<div class="row">
			<div class="col-md-6">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.Nom, 'votre nom') }}
					{{ form_widget(form.Nom, { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.Prenom, 'votre prenom') }}
					{{ form_widget(form.Prenom, { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.Email, 'votre Email') }}
					{{ form_widget(form.Email, { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.password, 'votre password') }}
					{{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group"></div>
				<div class="form-group">
					{{ form_label(form.Type, 'account type') }}
					{{ form_widget(form.Type, { 'attr': {'class': 'form-control'} }) }}
				</div>


				{{ include('user/_form.html.twig') }}
				{{ form_end(form, {'render_reset': false }) }}

			</div>
		</div>
	</div>

{% endblock %}

