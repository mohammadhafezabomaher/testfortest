{% extends 'base.html.twig' %}


{% block body %}
	{{ form_start(form) }}
	<div class="container">
		<h1 class="my-5">log in</h1>
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					{{ form_label(form.Email, 'votre Email') }}
					{{ form_widget(form.Email, { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.password, 'votre password') }}
					{{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
				</div>

				{{ include('user/_form.html.twig', {'button_label': 'login'}) }}
				{{ form_end(form, {'render_reset': false }) }}

			</div>
		</div>
	</div>


	<!-- partial -->
{% endblock %}
